@model IEnumerable<JobFinderWebApp.Models.TodoViewModel>
@{
    ViewData["Title"] = "Todos";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h4 class="mb-0">@ViewData["Title"]</h4>
                <a class="btn btn-primary btn-sm" asp-action="Create" asp-controller="Todos" asp-area="Admin">
                    Add Todo
                </a>
            </div>
            <div class="card-body">
                <table class="table" id="dtTodoTable">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Details</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var todo in Model)
                            {
                                <tr>
                                    <td>@todo.Id</td>
                                    <td>@todo.Title</td>
                                    <td>@todo.Details</td>
                                    <td>
                                        <button type="button" class="btn btn-info btn-fw">Info</button>
                                        <button type="button" class="btn btn-danger btn-fw">Danger</button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

